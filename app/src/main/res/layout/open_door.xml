<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue">


    <TextView
        android:id="@+id/doorMessage"
        android:layout_width="348dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        android:text="@string/DørBesked"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Door1"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_margin="32dp"
        android:text="@string/Dør1"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doorMessage"/>

    <Button
        android:id="@+id/Door2"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_margin="32dp"
        android:text="@string/Dør2"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Door1"
        app:layout_constraintTop_toBottomOf="@+id/doorMessage" />

    <Button
        android:id="@+id/Door3"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:text="@string/Dør3"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Door1"
        android:layout_margin="32dp"/>

    <Button
        android:id="@+id/Door4"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:text="@string/Dør4"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Door3"
        app:layout_constraintTop_toBottomOf="@+id/Door2"
        android:layout_margin="32dp" />


</androidx.constraintlayout.widget.ConstraintLayout>