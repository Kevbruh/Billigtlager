<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#b5cef5">


    <ImageView
        android:id="@+id/BilligtLagerBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/billigt_lager_banner" />

    <TextView
        android:id="@+id/doorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="20sp"
        android:text="@string/DørBesked"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BilligtLagerBanner" />

    <Button
        android:id="@+id/Door3"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:textSize="28sp"
        android:background="@drawable/rounded_button"
        android:onClick="openDoorsInNaestved"
        android:text="@string/Dør3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Door1" />

    <Button
        android:id="@+id/Door4"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:textSize="28sp"
        android:background="@drawable/rounded_button"
        android:onClick="openDoorsInNaestved"
        android:text="@string/Dør4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Door3"
        app:layout_constraintTop_toBottomOf="@+id/Door2" />

    <Button
        android:id="@+id/Door2"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:textSize="28sp"
        android:background="@drawable/rounded_button"
        android:onClick="openDoorsInNaestved"
        android:text="@string/Dør2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Door1"
        app:layout_constraintTop_toBottomOf="@+id/doorMessage" />

    <Button
        android:id="@+id/Door1"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:textSize="28sp"
        android:background="@drawable/rounded_button"
        android:onClick="openDoorsInNaestved"
        android:text="@string/Dør1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doorMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>